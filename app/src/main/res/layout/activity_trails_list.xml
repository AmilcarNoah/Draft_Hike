<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".TrailsListActivity">

    <!-- App Bar with Search -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Nearby Trails"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="?android:attr/homeAsUpIndicator"
            app:navigationIconTint="@android:color/white" />

        <!-- Search View with Location Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/gray_600" />

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search trails..."
                    android:textSize="16sp"
                    android:background="@null"
                    android:padding="4dp"
                    android:imeOptions="actionSearch" />

                <!-- Clear Search Button -->
                <ImageView
                    android:id="@+id/clearSearchBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="gone"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/gray_600" />

                <!-- Location Button -->
                <ImageView
                    android:id="@+id/locationButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:contentDescription="Use my location"
                    android:tint="@color/primary_color" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView for Trails -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTrails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="40dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="@color/gray_400" />

        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No trails found"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/emptyStateSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try searching with different keywords"
            android:textSize="16sp"
            android:textColor="@color/gray_500"
            android:layout_marginTop="8dp" />

        <!-- Retry/Location Button -->
        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Use My Location"
            android:drawableStart="@android:drawable/ic_menu_mylocation"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>