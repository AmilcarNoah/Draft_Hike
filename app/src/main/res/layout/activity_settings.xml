<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp">

        <!-- Voice Guidance -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:minHeight="64dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_btn_speak_now"

                    app:tint="@color/primary_color"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voice Guidance"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:minHeight="24dp"
                    android:gravity="center_vertical" />

                <Switch
                    android:id="@+id/switchVoiceGuidance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Text Size -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:minHeight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@android:drawable/ic_menu_agenda"

                        app:tint="@color/primary_color"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Text Size"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroupTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/radioSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Small"
                        android:textSize="14sp"
                        android:minHeight="48dp"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <RadioButton
                        android:id="@+id/radioMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medium"
                        android:textSize="16sp"
                        android:checked="true"
                        android:minHeight="48dp"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <RadioButton
                        android:id="@+id/radioLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Large"
                        android:textSize="18sp"
                        android:minHeight="48dp"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contrast Mode -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:minHeight="64dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_menu_edit"

                    app:tint="@color/primary_color"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="High Contrast Mode"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:minHeight="24dp"
                    android:gravity="center_vertical" />

                <Switch
                    android:id="@+id/switchContrastMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Offline Maps -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:minHeight="64dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_menu_save"

                    app:tint="@color/primary_color"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Download Offline Bench Data"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:minHeight="24dp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minWidth="100dp"
                    android:text="Download"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="18dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- About the App -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:minHeight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@android:drawable/ic_dialog_info"

                        app:tint="@color/primary_color"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="About the App"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BenchFinder helps hikers find trails with resting benches. Version 1.0.0"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/btnPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Privacy Policy"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/gray_400"
                    app:strokeWidth="1dp"
                    app:cornerRadius="24dp" />

                <Button
                    android:id="@+id/btnTermsOfService"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="Terms of Service"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/gray_400"
                    app:strokeWidth="1dp"
                    app:cornerRadius="24dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Emergency Contact -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnEmergencyContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/emergency_light"
            app:cardUseCompatPadding="true">

